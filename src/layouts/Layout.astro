---
import '../styles/global.css'

interface Props {
  title?: string
  description?: string
}

const {
  title = '.agents Protocol â€” The Open Standard for AI Agent Configuration',
  description = 'A unified, open standard for AI agent configuration. One directory to bring together MCP tools, AGENTS.md instructions, Skills, Memories, and more.',
} = Astro.props
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://dotagentsprotocol.com" />
    <meta property="og:image" content="https://dotagentsprotocol.com/og.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://dotagentsprotocol.com/og.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-bg text-fg antialiased font-mono text-sm leading-relaxed">
    <slot />
  </body>
</html>

